
 {% extends 'SiteAdminBundle::layout.html.twig' %}


 {% block content %}
{{ parent() }}

<h1>Pages edit</h1>

<form action="{{ path('pages_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn-primary btn-large">Edit</button>
    </p>
</form>
<ul class="record_actions">
    <li>
        <a href="{{ path('pages') }}">
            <i class="icon-share-alt"></i> Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('pages_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn">Delete</button>
        </form>
    </li>
</ul>

 {% endblock %}

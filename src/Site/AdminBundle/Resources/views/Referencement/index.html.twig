
 {% extends 'SiteAdminBundle::layout.html.twig' %}


 {% block content %}
{{ parent() }}


<h1>Referencement list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Routing</th>
            <th>Title</th>
            <th>Keywords</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('referencement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.routing }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.keywords }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('referencement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('referencement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('referencement_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

 {% endblock %}
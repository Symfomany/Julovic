
 {% extends 'SiteAdminBundle::layout.html.twig' %}


 {% block content %}
{{ parent() }}

<h1>Comments edit</h1>

<form action="{{ path('comments_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary btn-large">edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('comments') }}">
            <i class="icon-share-alt"></i> Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('comments_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-primary btn-large">Delete</button>
        </form>
    </li>
</ul>
 {% endblock %}
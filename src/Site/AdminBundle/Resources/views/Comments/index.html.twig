 {% extends 'SiteAdminBundle::layout.html.twig' %}

 {% block content %}
{{ parent() }}

<h1>Comments list</h1>

{% include 'SiteAdminBundle:Slot:filter.html.twig' %}
<div class="navigation">
    {{ pagination.render()|raw }}
</div>
<table class="table table-striped" class="records_list">
    <thead>
        <tr>
            <th>{{ pagination.sortable('Id', 'a.id')|raw }}</th>
            <th>Email</th>
            <th>Content</th>
            <th>Datecreated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
            <td><a href="{{ path('comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.content|raw }}</td>
            <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('comments_show', { 'id': entity.id }) }}"><i class="icon-search"></i>show</a>
                    </li>
                    <li>
                        <a href="{{ path('comments_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
     <thead>
        <tr>
            <th>{{ pagination.sortable('Id', 'a.id')|raw }}</th>
            <th>Email</th>
            <th>Content</th>
            <th>Datecreated</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
<div class="navigation">
    {{ pagination.render()|raw }}
</div>
<ul>
    <li>
        <a href="{{ path('comments_new') }}">
           <i class="icon-pencil"></i> Create a new entry
        </a>
    </li>
</ul>
 {% endblock %}

 {% extends 'SiteAdminBundle::layout.html.twig' %}


 {% block content %}
{{ parent() }}

<h1>Comments creation</h1>

<form action="{{ path('comments_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-primary">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('comments') }}">
            <i class="icon-share-alt"></i> Back to the list
        </a>
    </li>
</ul>
 {% endblock %}
 {% extends 'SiteAdminBundle::layoutoff.html.twig' %}

 {% block title %}Connexion Pro{% endblock %}
 {% block content %}
        {{ parent() }}
 <p></p>
 <p></p>
    <div class="span6" id="box_login">
                   {% if error %}
                                    <div class="alert alert-error">
                                                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                                            {{ error.message|trans({}, 'AdminBundle') }} 
                                    </div>      
                        {% endif %}
                                <center><h3>{{ nom_site }}</h3></center>
                                <center><p><i>{{ slogan|capitalize }}</i></p></center>
        <div class="well" >
                            <legend>Authentification</legend>
                                <form  class="form-horizontal" action="{{ path('login_check') }}" method="post">
                                    <div class="control-group">
                                        <label class="control-label" for="login">Login: </label>
                                        <div class="controls">
                                                <div class="input-prepend">
                                                        <span class="add-on">@</span>
                                                        <input class="span2" name="_username"  required="required" id="prependedInput" value="{{ last_username }}" size="16" type="email" {% if last_username is empty %} placeholder="E-mail"{% endif %} />
                                                </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="mdp">Password: </label>
                                        <div class="controls">
                                            <div class="input-prepend">
                                                        <span class="add-on">?</span>
                                                        <input type="password"  id="mdp"  required="required" minlength="5" placeholder="Password" name="_password" class="span2" id="prependedInput" size="16" type="text" />
                                                </div>
                                             <p></p>
                                             <label id="entrer" class="active"><i class="icon-user"></i><input type="checkbox" name="_remember_me" checked="checked">Se souvenir de moi</label>
                                              <p></p>
                                             <button type="submit" name="login"  data-loading-text="Loading..."  class="btn">Se Connecter</button>
                                        </div>
                                    </div>
                                    </form>
                            </fieldset>
            </div>
        </div>
    {% endblock %}
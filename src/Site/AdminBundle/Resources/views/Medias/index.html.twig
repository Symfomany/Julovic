            <th>Picture</th>
            <th>State</th>
            <th>Datecreated</th>
            <th>Dateupdated</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

<div class="navigation">
    {{ pagination.render()|raw }}
</div>


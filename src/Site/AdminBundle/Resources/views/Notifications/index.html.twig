
<div id="myModal2" class="modal hide fade"style="width: 800px;">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Notifications</h3>
  </div>
    <div class="modal-body">
<h1>Notifications</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Message</th>
                    <th>Datecreated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('notifications_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.message }}</td>
                    <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('notifications_show', { 'id': entity.id }) }}"><i class="icon-search"></i>show</a>
                            </li>
                            <li>
                                <a href="{{ path('notifications_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i>edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
<div class="modal-footer">
    <a  class="btn">Close</a>


 {% extends 'SiteAdminBundle::layout.html.twig' %}

 {% block content %}
{{ parent() }}

<h1>Articles creation</h1>


<form novalidate="novalidate" action="{{ path('articles_create') }}" method="post" {{ form_enctype(form) }}>
                
                {{ form_errors(form) }}
    
                {{ form_label(form.categoryId) }}
                {{ form_errors(form.categoryId) }}
                {{ form_widget(form.categoryId) }}
                
                {{ form_label(form.resume) }}
                {{ form_errors(form.resume) }}
                {{ form_widget(form.resume) }}
                
                {{ form_label(form.content) }}
                {{ form_errors(form.content) }}
                {{ form_widget(form.content) }}
                
                {{ form_label(form.notes) }}
                {{ form_errors(form.notes) }}
                {{ form_widget(form.notes, { 'attr': {'class': 'knobed'}}) }}
                
                {{ form_label(form.active) }}
                {{ form_errors(form.active) }}
                {{ form_widget(form.active) }}  
                
                {{ form_rest(form) }}
                
                <p>
                    <button type="submit" class="btn-primary btn-large">Create</button>
                </p>
</form>
            <ul class="record_actions">
                <li>
                    <a class="btn" href="{{ path('articles') }}">
                        Back to the list
                    </a>
                </li>
            </ul>
 {% endblock %}
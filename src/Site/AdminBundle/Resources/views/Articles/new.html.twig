
 {% extends 'SiteAdminBundle::layout.html.twig' %}

 {% block content %}
{{ parent() }}

<h1>Articles creation</h1>


<form  action="{{ path('articles_create') }}" method="post" enctype="multipart/form-data">
                
                {{ form_errors(form) }}
    
                {{ form_label(form.category) }}
                {{ form_errors(form.category) }}
                {{ form_widget(form.category) }}
                
                {{ form_label(form.title) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title) }}
                
                {{ form_label(form.resume) }}
                {{ form_errors(form.resume) }}
                {{ form_widget(form.resume, { 'attr': {'class': 'textarea'}}) }}
                
                {{ form_label(form.content) }}
                {{ form_errors(form.content) }}
                {{ form_widget(form.content, { 'attr': {'class': 'textarea'}}) }}
                
                {{ form_label(form.notes) }}
                {{ form_errors(form.notes) }}
                {{ form_widget(form.notes, { 'attr': {'class': 'knobed'}}) }}
                
                
                {% for media in form.medias %}
                        {{ form_label(media) }}
                        {{ form_errors(media) }}
                        {{ form_widget(media) }}  
                {% endfor %}
                
                
                {{ form_rest(form) }}
                
                <p>
                    <button type="submit" class="btn-primary btn-large">Create</button>
                </p>
</form>
            <ul class="record_actions">
                <li>
                    <a class="btn" href="{{ path('articles') }}">
                        <i class="icon-share-alt"></i> Back to the list
                    </a>
                </li>
            </ul>
 {% endblock %}